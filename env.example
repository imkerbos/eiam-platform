# EIAM Platform Environment Configuration Example
# Copy this file to .env and modify the values as needed

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_MODE=debug

# 数据库配置
DATABASE_DRIVER=mysql
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USERNAME=root
DATABASE_PASSWORD=password
DATABASE_DBNAME=eiam_platform
DATABASE_CHARSET=utf8mb4

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRE=3600
JWT_REFRESH_TOKEN_EXPIRE=604800
JWT_ISSUER=eiam-platform

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=logs/app.log

# 加密配置
ENCRYPTION_BCRYPT_COST=12

# CORS配置
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# SSO配置
SSO_DEFAULT_SESSION_TIMEOUT=1800
SSO_MAX_CONCURRENT_SESSIONS=5
SSO_ENABLE_SINGLE_LOGOUT=true

# OAuth2配置
OAUTH2_AUTHORIZATION_CODE_EXPIRE=600
OAUTH2_ACCESS_TOKEN_EXPIRE=3600
OAUTH2_REFRESH_TOKEN_EXPIRE=2592000

# SAML配置
SAML_ENTITY_ID=urn:eiam:platform
SAML_ACS_URL=https://your-domain.com/saml/acs
SAML_SLS_URL=https://your-domain.com/saml/sls
